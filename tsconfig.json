{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": [],
  },
  "include": ["src", "definition.d.ts"],
  "exclude": [
    "node_modules"
  ]
}